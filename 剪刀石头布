#include <stdio.h>
#include <stdlib.h>
		
int count=0;			

struct player		
{
	char name[10];	
	int win;		
	int lose;		
	double rate;
};

struct player g,gamer[100];			

int judge(int a)	
{
	int score,com;		//0--剪刀   1--石头  2--布
	
	com=rand()%2;

	if(a==0){
		printf("你出的拳是：剪刀");
		if(com==0)score=0;
		else if(com==1)score=2;
		else score=1;
	}else if(a==1){
		printf("你出的拳是：石头");
		if(com==0)score=1;
		else if(com==1)score=0;
		else score=2;
	}else if(a==2){
		printf("你出的拳是：布");
		if(com==0)score=2;
		else if(com==1)score=1;
		else score=0;
	}
	return score;
}

void game(int i)	
{
	int a,man=0,com=0,score;
	while(1){
		printf("\n请输入你要出的拳(0--剪刀/1--石头/2--布)：");
		scanf("%d",&a);
		if((a==0||a==1||a==2)!=1){
			printf("输入错误！请重新输入。\n");
			continue;
		}
		score=judge(a);
		if(score==1){
			printf("\n你赢了！\n");
			man++;
		}else if(score==2){
			printf("\n你输了！\n");
			com++;
		}else printf("\n平局！\n");
		printf("\n");
		if(man==2||com==2){
			if(man==2){
				printf("你赢了电脑！\n");
			} else {
				printf("电脑赢了你！\n");
			} 
			if(i!=0){
				if(man==2)g.win++;
				else g.lose++;
			}
			break;
		}
	}
}

void rank()		
{
	int i,j,k;

	if(gamer[0].lose!=0||gamer[0].win!=0)
	{

		for(i=0;i<count;i++){
			
			gamer[0].rate=1.0*gamer[0].win/(gamer[0].win+gamer[0].lose);
			
			for(j=i+1;j<=count;j++){
				
				if(gamer[j].lose!=0||gamer[j].win!=0)gamer[j].rate=1.0*gamer[j].win/(gamer[j].win+gamer[j].lose);
				
				if(gamer[i].rate<gamer[j].rate){
					g=gamer[i];
					gamer[i]=gamer[j];
					gamer[j]=g;
					}
				}
			}
		}
	printf("*****************************************************************\n");
	printf("			  排行榜\n\n");
	printf("名次	姓名		胜局		负局		胜率\n");
	for(k=0;k<count;k++){
		printf("%d%10s%15d%16d%16.2lf\n",k+1,gamer[k].name,gamer[k].win,gamer[k].lose,gamer[k].rate);
	}
	printf("*****************************************************************\n");
}

void battle()		
{
	int a=0;
	g.lose=0;g.win=0;
	printf("进入比赛模式！\n\n");
	printf("请输入您的ID：");
	scanf("%s",g.name);
	if(a==0){
		game(1);
		gamer[count]=g;
		count++; 
	}
}

int select()	
{
	int select;

	printf("*****************************************************************\n\n");
	printf("			   菜单：\n\n");
	printf("			1--练习模式\n");
	printf("			2--比赛模式\n");
	printf("			3--查看排行榜\n");
	printf("			4--退出游戏\n\n");	
	printf("*****************************************************************\n\n");
	printf("请输入你的选择：");

	while(1){
	scanf("%d",&select);
		printf("\n");
		if(select>0&&select<5)break; 
			else{
				printf("输入错误，请重新输入！\n\n");
				printf("请输入你的选择：");
			}
	}
	return select;
}

void main ()				
{
	int myselect;

	while(myselect=select()){
		
		if(myselect==1)game(0);
		else if(myselect==2)battle();
		else if(myselect==3)rank();
		else break;
	}
	printf("\n拜拜！\n");
}
